{
    "name": "Tutorial: video-frontend-tutorial",
    "image": "mcr.microsoft.com/devcontainers/javascript-node:1-22-bookworm",
    "workspaceFolder": "/workspaces/interactive-tutorial-demo/tutorials/video-frontend-tutorial",
    "waitFor": "onCreateCommand",
    "updateContentCommand": "npm install",
    "postCreateCommand": "",
    "postAttachCommand": "nohup ./node_modules/.bin/http-server steps -p 1234 --cors -c-1 > /dev/null 2>&1 & (nohup sh -c \"sleep 5 && gh codespace ports visibility 8080:public -c $CODESPACE_NAME\" > /dev/null 2>&1 &) && (sleep 4 && echo -e \"\\n\\nðŸš€ PREVIEW READY:\\nhttps://${CODESPACE_NAME}-8080.app.github.dev\\n\\n\" &) && ./node_modules/.bin/live-server --port=8080 --no-browser > /dev/null 2>&1 & wait",
    "forwardPorts": [
        "1234",
        "8080"
    ],
    "features": {
        "ghcr.io/devcontainers/features/github-cli:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [],
            "settings": {
                "editor.formatOnSave": true,
                "files.exclude": {
                    "node_modules": true,
                    "dist": true,
                    "steps": true,
                    ".devcontainer": true,
                    ".vscode": true,
                    "package.json": true,
                    "package-lock.json": true,
                    "tutorial-config.json": true,
                    "tsconfig.json": true,
                    "astro.config.mjs": true,
                    ".git": true,
                    ".DS_Store": true,
                    "__MACOSX": true,
                    "README.md": true,
                    "markdoc.config.mjs": true,
                    "project/setup-project.js": true
                }
            }
        },
        "codespaces": {
            "openFiles": [
                "index.html",
                "app.js",
                "app.css",
                "config.js"
            ]
        }
    },
    "portsAttributes": {
        "1234": {
            "label": "Tutorial Guide",
            "onAutoForward": "openPreview"
        },
        "8080": {
            "label": "My Project Preview",
            "onAutoForward": "notify",
            "visibility": "public"
        }
    }
}