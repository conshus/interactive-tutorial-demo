{
    "name": "Tutorial: node_learning_server-example-tutorial",
    "image": "mcr.microsoft.com/devcontainers/javascript-node:1-22-bookworm",
    "workspaceFolder": "/workspaces/interactive-tutorial-demo/tutorials/node_learning_server-example-tutorial",
    "waitFor": "onCreateCommand",
    "updateContentCommand": "npm install",
    "postCreateCommand": "",
    "postAttachCommand": "nohup npm run start:tutorial > /dev/null 2>&1 & echo '' && cd project && gh codespace ports visibility 3000:public -c $CODESPACE_NAME && node setup-project.js && npm start",
    "features": {
        "ghcr.io/devcontainers/features/github-cli:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [],
            "settings": {
                "editor.formatOnSave": true,
                "files.exclude": {
                    "node_modules": true,
                    "dist": true,
                    "steps": true,
                    ".devcontainer": true,
                    ".vscode": true,
                    "package.json": true,
                    "package-lock.json": true,
                    "tutorial-config.json": true,
                    "tsconfig.json": true,
                    "astro.config.mjs": true,
                    ".git": true,
                    ".DS_Store": true,
                    "__MACOSX": true,
                    "README.md": true,
                    "markdoc.config.mjs": true,
                    "project/setup-project.js": true
                }
            }
        },
        "codespaces": {
            "openFiles": []
        }
    },
    "portsAttributes": {
        "1234": {
            "label": "Tutorial Guide",
            "onAutoForward": "openPreview"
        }
    }
}